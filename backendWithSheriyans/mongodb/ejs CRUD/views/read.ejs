<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css"> 
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main">

        <div class="mb-5 rounded bg-zinc-800 inline-block p-1">
            <a href="/">Back to home</a>
        </div>

        <h1>All Users</h1>

        <div class="users pt-3 rounded flex flex-wrap">

            <% if(users.length>0){ %> 

                <% users.forEach(function(user){ %>
  
                    <div class="user bg-zinc-800 py-2 px-2 inline-block rounded mr-2 mb-2">
                        <div class="image-cont rounded">
                            <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="image">
                        </div>
                        <div class="user-name flex justify-center">
                            <h1><%= user.name %></h1>
                        </div>
                        <h1><%= user.email %></h1>
                        <div class="text-zinc-500">
                            <a class="text-[0.7rem]" href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-[0.7rem] text-red-500"  href="/delete/<%= user._id %>">Delete User</a>
                        </div>
                    </div>
    
                    <% }); %>

            <% } else{ %> 

                <div class="text-zinc-400 mb-2">
                    <h1>no user</h1>
                </div>

            <% } %> 

            

        </div>

    </div>
</body>
</html>