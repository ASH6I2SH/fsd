<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">

      <div class="form p-10 text-white">
        <form action="/create" method="post" >
          <input
            class="block px-5 py-2 bg-zinc-800 w-full rounded-md"
            type="text"
            placeholder="title goes here"
            name="title"
          />
          <textarea
            class="block px-5 py-2 bg-zinc-800 resize-none w-full rounded-md mt-2"
            placeholder="Write your task details here"
            name="details"
            id=""
          ></textarea>
          <input
            class="bg-blue-600 rounded px-3 py-1 mt-2"
            type="submit"
            ,
            value="Create Task"
          />
        </form>
      </div>

      <div class="tasks p-10 flex gap-4 flex-wrap">

        <% if(files.length>0){ %>
          <% files.forEach(function(val){ %>
      
              <div class="task  min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                <h1 class="text-white text-3xl tracking-tighter "> <%= val.split('.')[0] %> </h1>
                <div class="mt-3 flex justify-between">
                  <a class="text-blue-500 inline-block " href="/files/<%= val %>">read more...</a>
                <a class="text-zinc-500" href="/edit/<%= val %>">edit filename</a>
                </div>
                <div>
                  <form action="/delete/<%= val %>" method="post">
                    <input type="submit" value="Delete">
                  </form>
                </div>
              </div>
      
      <% }) %>
      <% } else{ %>
      
          <h3 class="text-zinc-600">no tasks yet.</h3>
          <% } %>

      </div>


    </div>
  </body>
</html>
